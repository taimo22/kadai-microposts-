
  <span class="like">
    <% if micropost.like?(current_user) %>
      <%= form_for(micropost.relation_favors.find_by(user_id: current_user.id), method: :delete) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.submit 'no like', calss: 'btn btn-danger btn-xs' %>
      <% end %>
    <% else %>
      <%= form_for(micropost.relation_favors.build) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.submit 'like', class: 'btn btn-primary btn-xs' %>
      <% end %>
    <% end %>
  </span>


