

<h1>お気に入り投稿一覧</h1>

<% if @user.microposts.any? %>
  <ul class="media-list">
    <% @user.microposts.each do |like| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(@user, {size:50}) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= link_to @user.name, user_path(@user) %> <span class="text-muted">posted at <%= like.created_at %></span>
          </div>
          <div>
            <%= like.content %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(@user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
